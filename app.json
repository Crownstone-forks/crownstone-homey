{
  "_comment": "This file is generated. Please edit .homeycompose/app.json instead.",
  "id": "rocks.crownstone",
  "version": "0.0.3",
  "compatibility": ">=5.0.0",
  "sdk": 3,
  "brandColor": "#003e52",
  "name": {
    "en": "Crownstone",
    "nl": "Crownstone"
  },
  "description": {
    "en": "Crownstones can switch devices, dim lights, measure power consumption, and localize people.",
    "nl": "Crownstones kunnen apparaten schakelen, lichten dimmen, stroom meten en binnenshuis de positie bepalen van mensen."
  },
  "category": [
    "localization"
  ],
  "permissions": [
    "homey:manager:speech-output",
    "homey:manager:ledring",
    "homey:wireless:ble"
  ],
  "images": {
    "large": "/assets/images/large.png",
    "small": "/assets/images/small.png"
  },
  "author": {
    "name": "Crownstone",
    "email": "ask@crownstone.rocks"
  },
  "contributor": {
    "developers": [
      {
        "name": "Alex de Mulder",
        "email": "alex@crownstone.rocks"
      },
      {
        "name": "Anne van Rossum",
        "email": "anne@crownstone.rocks"
      },
      {
        "name": "Mart-Jan Koedam",
        "email": "martjan.koedam@gmail.com"
      }
    ]
  },
  "flow": {
    "triggers": [
      {
        "id": "user_enters_room",
        "title": {
          "en": "User enters room",
          "nl": "Gebruiker komt kamer binnen"
        },
        "args": [
          {
            "type": "autocomplete",
            "name": "users",
            "placeholder": {
              "en": "Select a user",
              "nl": "Selecteer een gebruiker"
            }
          },
          {
            "type": "autocomplete",
            "name": "rooms",
            "placeholder": {
              "en": "Select a room",
              "nl": "Selecteer een kamer"
            }
          }
        ],
        "hint": {
          "en": "When a user enters a room...",
          "nl": "Wanneer een gebruiker de kamer binnen komt..."
        }
      }
    ],
    "conditions": [
      {
        "id": "user_presence",
        "title": {
          "en": "User !{{is|isn't}} present in the room",
          "nl": "De gebruiker !{{is|is niet}} aanwezig in de kamer"
        },
        "args": [
          {
            "type": "autocomplete",
            "name": "users",
            "placeholder": {
              "en": "Select a user",
              "nl": "Selecteer een gebruiker"
            }
          },
          {
            "type": "autocomplete",
            "name": "rooms",
            "placeholder": {
              "en": "Select a room",
              "nl": "Selecteer een kamer"
            }
          }
        ],
        "hint": {
          "en": "When a user is present in a room...",
          "nl": "Wanneer een gebruiker in een kamer aanwezig is..."
        }
      }
    ]
  },
  "drivers": [
    {
      "name": {
        "en": "Crownstone",
        "nl": "Crownstone"
      },
      "class": "socket",
      "capabilities": [
        "onoff",
        "dim"
      ],
      "capabilitiesOptions": {
        "onoff": {
          "title": {
            "en": "Crownstone switch or dimmer"
          }
        }
      },
      "images": {
        "large": "/assets/images/large-square.png",
        "small": "/assets/images/very-small-square.png"
      },
      "pair": [
        {
          "id": "loading",
          "template": "loading"
        },
        {
          "id": "confirmation"
        },
        {
          "id": "login_credentials",
          "template": "login_credentials",
          "options": {
            "usernameLabel": "E-mail address",
            "usernamePlaceholder": "crownstone.rocks@gmail.com"
          }
        },
        {
          "id": "list_devices",
          "template": "list_devices",
          "navigation": {
            "next": "add_devices"
          }
        },
        {
          "id": "add_devices",
          "template": "add_devices"
        }
      ],
      "id": "crownstone"
    }
  ]
}