{
  "_comment": "This file is generated. Please edit .homeycompose/app.json instead.",
  "id": "rocks.crownstone",
  "version": "0.0.5",
  "compatibility": ">=5.0.0",
  "sdk": 3,
  "brandColor": "#003e52",
  "name": {
    "en": "Crownstone",
    "nl": "Crownstone"
  },
  "description": {
    "en": "Crownstones can switch devices, dim lights, measure power consumption, and localize people.",
    "nl": "Crownstones kunnen apparaten schakelen, lichten dimmen, stroom meten en binnenshuis de positie bepalen van mensen."
  },
  "category": [
    "localization"
  ],
  "permissions": [
    "homey:manager:speech-output",
    "homey:manager:ledring",
    "homey:wireless:ble"
  ],
  "images": {
    "large": "/assets/images/crownstone_logo_text_black_500x350.png",
    "small": "/assets/images/crownstone_logo_text_black_250x175.png"
  },
  "author": {
    "name": "Crownstone",
    "email": "ask@crownstone.rocks"
  },
  "contributor": {
    "developers": [
      {
        "name": "Alex de Mulder",
        "email": "alex@crownstone.rocks"
      },
      {
        "name": "Anne van Rossum",
        "email": "anne@crownstone.rocks"
      },
      {
        "name": "Mart-Jan Koedam",
        "email": "martjan.koedam@gmail.com"
      }
    ]
  },
  "flow": {
    "triggers": [
      {
        "id": "user_enters_room",
        "title": {
          "en": "Someone enters room",
          "nl": "Iemand komt kamer binnen"
        },
        "titleFormatted": {
          "en": "[[users]] enters [[rooms]]",
          "nl": "[[users]] komt [[rooms]] binnen"
        },
        "args": [
          {
            "type": "autocomplete",
            "name": "users",
            "placeholder": {
              "en": "Who?",
              "nl": "Wie?"
            }
          },
          {
            "type": "autocomplete",
            "name": "rooms",
            "placeholder": {
              "en": "Where?",
              "nl": "Waar?"
            }
          }
        ],
        "hint": {
          "en": "When a user enters a room...",
          "nl": "Zodra iemand een kamer binnenkomt..."
        }
      }
    ],
    "conditions": [
      {
        "id": "user_presence",
        "title": {
          "en": "Someone !{{is|isn't}} present in the room",
          "nl": "Iemand !{{is|is niet}} aanwezig in de kamer"
        },
        "titleFormatted": {
          "en": "[[users]] !{{is|isn't}} present in the [[rooms]]",
          "nl": "[[users]] !{{is|is niet}} aanwezig in de [[rooms]]"
        },
        "args": [
          {
            "type": "autocomplete",
            "name": "users",
            "placeholder": {
              "en": "Who?",
              "nl": "Wie?"
            }
          },
          {
            "type": "autocomplete",
            "name": "rooms",
            "placeholder": {
              "en": "Where?",
              "nl": "Waar?"
            }
          }
        ],
        "hint": {
          "en": "When a user is present in a room...",
          "nl": "Wanneer iemand zich in een kamer bevindt..."
        }
      }
    ]
  },
  "drivers": [
    {
      "name": {
        "en": "Crownstone",
        "nl": "Crownstone"
      },
      "class": "socket",
      "capabilities": [
        "onoff",
        "dim"
      ],
      "capabilitiesOptions": {
        "onoff": {
          "title": {
            "en": "Crownstone switch or dimmer"
          }
        }
      },
      "images": {
        "large": "/assets/images/crownstone_logo_white_square_500x500.png",
        "small": "/assets/images/crownstone_logo_white_square_75x75.png"
      },
      "pair": [
        {
          "id": "loading",
          "template": "loading"
        },
        {
          "id": "confirmation"
        },
        {
          "id": "login_credentials",
          "template": "login_credentials",
          "options": {
            "logo": "../../../assets/images/large-square.png",
            "usernameLabel": {
              "en": "E-mail address",
              "nl": "Emailadres"
            },
            "usernamePlaceholder": {
              "en": "email@address.com",
              "nl": "email@adres.nl"
            }
          }
        },
        {
          "id": "list_devices",
          "template": "list_devices",
          "navigation": {
            "prev": "login_credentials",
            "next": "add_devices"
          }
        },
        {
          "id": "add_devices",
          "template": "add_devices",
          "navigation": {
            "next": "done"
          }
        },
        {
          "id": "done",
          "template": "done",
          "navigation": {
            "prev": "add_devices"
          }
        }
      ],
      "id": "crownstone"
    }
  ]
}