{
  "id": "rocks.crownstone",
  "version": "0.0.1",
  "compatibility": ">=1.5.0",
  "sdk": 2,
  "name": {
    "en": "Crownstone"
  },
  "description": {
    "en": "Control Crownstones, switch, dim, measure power consumption, or localize yourself"
  },
  "category": [
    "localization", 
    "appliances",
    "lights"
  ],
  "permissions": [
    "homey:manager:speech-output",
    "homey:manager:ledring",
    "homey:wireless:ble"
  ],
  "images": {
    "large": "/assets/images/large.png",
    "small": "/assets/images/small.png"
  },
  "author": {
    "name": "Crownstone",
    "email": "team@crownstone.rocks"
  },
  "contributor": {
    "developers": [
      {
        "name": "Alex de Mulder",
        "email": "alex@crownstone.rocks"
      },
      {
        "name": "Anne van Rossum",
        "email": "anne@crownstone.rocks"
      }
    ]
  },
  "drivers": [
    {
      "id": "crownstone",
      "name": {
        "en": "Crownstone"
      },
      "images": {
        "large": "/assets/images/large-square.png",
        "small": "/assets/images/very-small-square.png"
      },
      "class": "socket",
      "capabilities": [ "onoff" ],
      "capabilitiesOptions": {
        "onoff": {
          "title": {
            "en": "Crownstone switch or dimmer"
          }
        }
      },      
      "pair": [
        {
          "id": "list_devices",
          "template": "list_devices",
          "navigation": {
            "next": "add_devices"
          }
        },
        {
          "id": "add_devices",
          "template": "add_devices"
        }
      ]
    }
  ]
}
