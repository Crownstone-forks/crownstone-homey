  "flow": {
    "triggers": [
      {
        "id": "user_enters_room",
        "title": {
          "en": "User enters room"
        },
        "args": [
          {
            "type": "autocomplete",
            "name": "rooms",
            "placeholder": {
              "en": "Select a room"
            }
          }
        ],
        "hint": {
          "en": "When a user enters a room..."
        }
      }
    ],
    "conditions": [
      {
        "id": "is_raining",
        "title": {
          "en": "It !{{is|isn't}} raining"
        }
      },
      {
        "id": "raining_in",
        "title": {
          "en": "It's going to rain in..."
