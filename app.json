        "titleFormatted": {
          "en": "It !{{is|isn't}} going to rain in [[when]]"
        },
        "args": [
          {
            "name": "when",
            "type": "dropdown",
            "values": [
              {
                "id": "5",
                "label": {
                  "en": "5 minutes"
                }
              },
              {
                "id": "10",
                "label": {
                  "en": "10 minutes"
                }
              },
              {
                "id": "15",
                "label": {
                  "en": "15 minutes"
                }
              }
            ]
          }
        ]
      }
    ]
  },
  "drivers": [
    {
      "name": {
        "en": "Crownstone Zero",
        "nl": "Crownstone Zero"
      },
      "class": "socket",
      "capabilities": [
        "onoff"
      ],
      "capabilitiesOptions": {
        "onoff": {
          "title": {
            "en": "Crownstone switch or dimmer"
          }
        }
      },
      "pair": [
        {
          "id": "list_devices",
          "template": "list_devices",
          "navigation": {
            "next": "add_devices"
          }
        },
        {
          "id": "add_devices",
          "template": "add_devices"
        }
      ],
      "id": "crownstone"
    }
  ]
